<div class="form-container">
  <div class="form-body">
    <div class="form-wrapper">
      <form action="/users" method="POST">
        {{> message}}
        <div class="mb-2">
          <label for="email" class="form-label">E-mail (登入帳號)</label>
          <input type="text" class="form-control" id="email" name="email">
        </div>
        <div class="mb-2">
          <label for="name" class="form-label">使用者名稱</label>
          <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="mb-2">
          <label for="password" class="form-label">密碼</label>
          <input type="text" class="form-control" id="password" name="password">
        </div>
        <div class="mb-2">
          <label for="confirmPassword" class="form-label"> 確認密碼</label>
          <input type="text" class="form-control" id="confirmPassword" name="confirmPassword">
        </div>
        <p>已經有帳號？<a href="/login">登入</a></p>
        <button type="submit" class="btn btn-outline-success ">確認註冊</button>
        </form>

        <form action="/login/facebook" method="GET">
          <button type="submit" class="btn btn-outline-primary ">以 Facebook 帳號登入</button>
        </form>

    </div>
  </div>
</div>